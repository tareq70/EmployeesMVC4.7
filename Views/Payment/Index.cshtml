@model EmployeesMVC4._7.View_Models.ChargeViewModel

@{
    ViewBag.Title = "Payment";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-lg rounded-4">
                <div class="card-body p-4">

                    <h3 class="text-center mb-4">Payment Form</h3>

                    @using (Html.BeginForm("CreateCharge", "Payment", FormMethod.Post))
                    {
                        <div class="mb-3">
                            @Html.LabelFor(m => m.Customer.FirstName, "First Name", new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Customer.FirstName,
                                new { @class = "form-control", placeholder = "Enter your first name", required = "required" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Customer.Email, "Email Address", new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Customer.Email,
                                new { @class = "form-control", type = "email", placeholder = "example@email.com", required = "required" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Customer.Phone.CountryCode, "Country Code", new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Customer.Phone.CountryCode,
                                new { @class = "form-control", placeholder = "20", required = "required" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Customer.Phone.Number, "Phone Number", new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Customer.Phone.Number,
                                new { @class = "form-control", placeholder = "Enter your phone number", required = "required" })
                        </div>

                        <div class="mb-4">
                            @Html.LabelFor(m => m.Amount, "Amount", new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Amount,
                                new { @class = "form-control", type = "number", step = "0.01", placeholder = "0.00", required = "required" })
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg rounded-3">
                                Pay Now
                            </button>
                        </div>
                    }

                </div>
            </div>

        </div>
    </div>
</div>
